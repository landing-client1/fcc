#!/bin/bash

# SETUP ROOT
export ROOT=$(pwd)
echo ${ROOT}
# cd ${ROOT}/noelle-install/bin
# sed -i 's:installDir=.*:installDir=${ROOT}/noelle-install:' *
# cd -


# LLVM PATH
export LLVM_INSTALL_DIR=${ROOT}/llvm-install
export LLVM_OBJ_DIR=$LLVM_INSTALL_DIR
export LLVM_INCLUDE_DIR=$LLVM_INSTALL_DIR/include
export LLVM_BINS_DIR=$LLVM_INSTALL_DIR/bin
export LLVM_LIBS_DIR=$LLVM_INSTALL_DIR/lib

# SCAF PATH
export SCAF_INSTALL_DIR=${ROOT}/noelle-install
export SCAF_INCLUDE_DIR=$SCAF_INSTALL_DIR/include
export SCAF_LIBS_DIR=$SCAF_INSTALL_DIR/lib
export SCAF_BINS_DIR=$SCAF_INSTALL_DIR/bin

# NOELLE PATH
export NOELLE_INSTALL_DIR=${ROOT}/noelle-install
export NOELLE_INCLUDE_DIR=$NOELLE_INSTALL_DIR/include
export NOELLE_LIBS_DIR=$NOELLE_INSTALL_DIR/lib
export NOELLE_BINS_DIR=$NOELLE_INSTALL_DIR/bin

# FCC PATH
export LIBERTY_INSTALL_DIR=${ROOT}/fcc-install
export LIBERTY_INCLUDE_DIR=$LIBERTY_INSTALL_DIR/include
export LIBERTY_LIBS_DIR=$LIBERTY_INSTALL_DIR/lib
export LIBERTY_OBJ_DIR=$LIBERTY_INSTALL_DIR
export LIBERTY_SMTX_DIR=$LIBERTY_INSTALL_DIR/support/smtx

# REGRESSION SCRIPT PATH
export REGRESSION_SCRIPT_DIR=${ROOT}/tests/scripts

# PATH & LD_LIBRARY_PATH
export PATH=$NOELLE_BINS_DIR:$LLVM_BINS_DIR:$REGRESSION_SCRIPT_DIR:$PATH
export LD_LIBRARY_PATH=$LLVM_LIBS_DIR:$SCAF_LIBS_DIR:$NOELLE_LIBS_DIR:$LIBERTY_LIBS_DIR:$LD_LIBRARY_PATH
